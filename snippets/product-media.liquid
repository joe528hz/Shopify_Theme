{% case media.media_type %}
  {% when "image" %}
    <img src="{{ media |  img_url: 'large'  }}" alt="{{ media.preview_image.alt | escape }}" class="product__image" />
  {% when "external_video" %}
    {{ media | external_video_tag: class:"product__external-video" }}
  {% when "video" %}
    {{ media | video_tag: controls: true, class: "product__video" }}
  {% when "model" %}
    {{ media | model_viewer_tag: class: "product__model" }}
  {% else %}
    {{ media | media_tag }}

{% endcase %}